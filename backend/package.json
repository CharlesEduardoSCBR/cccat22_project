{
  "name": "cccat22_project",
  "version": "1.0.0",
  "description": "Este conteúdo é parte do curso Clean Code e Clean Architecture da Branas.io",
  "main": "index.js",
  "license": "ISC",
  "scripts": {
    "docker:build": "docker build -t cccat22_backend docker",
    "docker:run": "docker run -it -v $(pwd)/.:/app cccat22_backend bash",
    "compose:up": "docker compose -f .devcontainer/docker-compose.yaml up -d",
    "compose:down": "docker compose -f .devcontainer/docker-compose.yaml -v --down",
    "compose:exec": "docker compose -f .devcontainer/docker-compose.yaml exec -it backend bash",
    "compose:db:down": "docker compose -f .devcontainer/docker-compose.yaml down db-account db-query -v",
    "compose:db:up": "docker compose -f .devcontainer/docker-compose.yaml up db-account db-query -d",
    "compose:ps": "docker compose -f ../.devcontainer/docker-compose.yaml ps",
    "compose:services": "docker compose -f ../.devcontainer/docker-compose.yaml config --services",
    "compose:logs": "docker compose -f ../.devcontainer/docker-compose.yaml logs -f",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/sinon": "^17.0.4",
    "axios": "^1.12.2",
    "cors": "2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "pg-promise": "^11.15.0",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
